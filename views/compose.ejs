<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">

    <label for="image">Image</label>
    <input name="url_input" id="url_input" class="form-control" />
    <button id="imageButton" type="button" name="button">Upload Image</button>

    <img id="img" src="" alt="" style="display: none;">


    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" value="">

    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="7" cols="50"></textarea>


  </div>


  <button id="btn" class="btn btn-warning" type="submit" name="button">Publish</button>
</form>


